doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		include ../includes/head
	body
		h1.text-center #{title}
		.container
			.row
				.col-md-4.col-md-offset-4
					form(onsubmit="return false;")
						.modal-body
							.form-group
								label(for="email") #{inxt.t('email')}
								input#email.form-control(name="email", type="text", required, placeholder="#{inxt.t('email')}")
						.modal-footer
							button.btn.btn-block.btn-success(id="findPass") #{inxt.t('findPass')}
					hr
					button.btn.btn-block.btn-default
						a(href="/signup") #{inxt.t('Go')}&nbsp;#{inxt.t('Signin')}
					button.btn.btn-block.btn-default
						a(href="/signup") #{inxt.t('Go')}&nbsp;#{inxt.t('Signup')}
					button.btn.btn-block.btn-default
						a(href="/") #{inxt.t('Home')}
		script(src="/js/findPass.js")