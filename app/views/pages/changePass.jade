doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		include ../includes/head
	body
		h1.text-center #{title}
		.container
			.row
				.col-md-4.col-md-offset-4
					form(onsubmit="return false;")
						.modal-body
							.form-group
								input#Password.form-control(name="password", type="password", required, placeholder="6-16 #{inxt.t('charset')} #{inxt.t('number')}")
								input#userId(type="hidden", name="id" value="#{id}")
						.modal-footer
							button.btn.btn-block.btn-success(id="changePass") #{inxt.t('changePass')}
					hr
					button.btn.btn-block.btn-default
						a(href="/signup") #{inxt.t('Go')}&nbsp;#{inxt.t('Signin')}
					button.btn.btn-block.btn-default
						a(href="/signup") #{inxt.t('Go')}&nbsp;#{inxt.t('Signup')}
					button.btn.btn-block.btn-default
						a(href="/") #{inxt.t('Home')}
		script(src="/js/changePass.js")